<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:weightSum="6"
    >
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ViewPager"
            android:layout_weight="6"
            ></android.support.v4.view.ViewPager>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:elevation="20dp"
                app:mrl_rippleColor="#545454"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleHover="true"
                app:mrl_rippleDuration="2"

                >
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="auto"
                    app:backgroundTint="#FFCB57"
                    android:id="@+id/Previous"
                    android:src="@drawable/ic_left_arrow_angle"
                    android:visibility="invisible"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:elevation="20dp"
            app:mrl_rippleColor="#545454"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleHover="true"
            app:mrl_rippleDuration="2"
                >
                <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="auto"
            app:backgroundTint="#FFCB57"
                    android:id="@+id/Next"
            android:src="@drawable/ic_keyboard_right_arrow_button"
            />
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/DotIndecator"
            app:selectedDotColor="@color/primary"
            app:dotsColor="@android:color/white"

            />
        </android.support.constraint.ConstraintLayout>
</LinearLayout>
</layout>